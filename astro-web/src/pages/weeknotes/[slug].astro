---
import { sanity } from "../../lib/sanity.js";
import { PortableText } from "astro-portabletext";
import Nav from '../../components/Nav.astro'



// This tells Astro which pages to generate
export async function getStaticPaths() {
  const weeknotes = await sanity.fetch(`
    *[_type == "weeknotes"] {
      "slug": slug.current
    }
  `);

  return weeknotes.map((weeknote) => ({
    params: { slug: weeknote.slug },
  }));
}

const { slug } = Astro.params;

// Fetch the specific weeknote
const weeknote = await sanity.fetch(
  `
  *[_type == "weeknotes" && slug.current == $slug][0] {
    _id,
    title,
    publishedAt,
    intro,
    work,
    read,
    listen,
    play,
    executiveLearning
  }
`,
  { slug }
);

if (!weeknote) {
  return Astro.redirect("/404");
}
