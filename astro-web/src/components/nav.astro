---
// No props needed
---

<nav class="main-nav">
  <div class="nav-container">
    <a href="/" class="nav-brand">
      <img src="/logo.jpg" alt="Jake Brown" class="logo-image">
    </a>
    <button class="menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
  
  <div class="mobile-menu">
    <ul class="nav-links">
      <li><a href="/weeknotes">Weeknotes</a></li>
      <li><a href="/work">Work</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </div>
</nav>

<style>
  .main-nav {
    background: #2d2d2d;
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .nav-brand {
    display: flex;
    align-items: center;
  }
  
  .logo-image {
    width: 45px;
    height: 45px;
    border-radius: 4px;
    object-fit: cover;
  }
  
  .menu-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 0.5rem;
    z-index: 1001;
  }
  
  .menu-toggle span {
    display: block;
    width: 28px;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }
  
  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  
  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }
  
  .mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 80%;
    max-width: 400px;
    height: 100vh;
    background: #2d2d2d;
    transition: right 0.3s ease;
    z-index: 999;
    padding-top: 80px;
  }
  
  .mobile-menu.active {
    right: 0;
  }
  
  .nav-links {
    list-style: none;
    margin: 0;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .nav-links a {
    text-decoration: none;
    color: white;
    font-size: 1.5rem;
    font-weight: 500;
    transition: opacity 0.2s;
    display: block;
  }
  
  .nav-links a:hover {
    opacity: 0.7;
  }
  
  /* Desktop - show links inline instead of burger */
  @media (min-width: 769px) {
    .menu-toggle {
      display: none;
    }
    
    .mobile-menu {
      position: static;
      width: auto;
      height: auto;
      background: transparent;
      padding: 0;
    }
    
    .nav-links {
      flex-direction: row;
      gap: 2rem;
      padding: 0;
    }
    
    .nav-links a {
      font-size: 1rem;
    }
  }
</style>

<script>
  const menuToggle = document.querySelector('.menu-toggle');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
  });
  
  // Close menu when clicking a link
  const navLinks = document.querySelectorAll('.nav-links a');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      mobileMenu?.classList.remove('active');
    });
  });
  
  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuToggle?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      menuToggle?.classList.remove('active');
      mobileMenu?.classList.remove('active');
    }
  });
</script>